<!-- views/partials/account_display.ejs -->

<!--
    Customer Information Panel
-->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Customer Information</h3>
    </div>
    <div class="panel-body">
        <!-- Customer Information Form -->
        <div class="col-md-12">
            <form class="form-horizontal">
                <!-- First Name -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">First name</div>
                        <input type="text" class="form-control" placeholder="FirstName" value="<%= customerInfo.fname %>">
                    </div>
                </div>
                <!-- Last Name -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Last name</div>
                        <input type="text" class="form-control" placeholder="LastName" value="<%= customerInfo.lname %>">
                    </div>
                </div>
                <!-- Email -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Email</div>
                        <input type="text" class="form-control" placeholder="Email" value="<%= customerInfo.email %>">
                    </div>
                </div>
                <!-- Address -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Address</div>
                        <input type="text" class="form-control" placeholder="Address" value="<%= customerInfo.address %>">
                    </div>
                </div>
                <!-- Phone -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Phone</div>
                        <input type="text" class="form-control" placeholder="Phone" value="<%= customerInfo.phone %>">
                    </div>
                </div>
                <!-- Status -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Status</div>
                        <input type="text" class="form-control" placeholder="Status" value="<%= customerInfo.status %>">
                    </div>
                </div>
                <!-- Credit Line -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Credit Line</div>
                        <input type="text" class="form-control" placeholder="CreditLine" value="<%= customerInfo.credit_line %>">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!--
    Stored Credit Cards Panel
-->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Stored Credit Cards</h3>
    </div>
    <div class="panel-body">
        <!-- Stored Credit Cards Information Table -->
        <% storedCards.forEach(function(item) { %>
        <div class="list-group">
            <div class="list-group-item">
                <h4 class="list-group-item-heading">Card: <%= item.ccnumber %></h4>
                <ul class="list-group">
                    <li class="list-group-item">Sec: <%= item.sec_number %></li>
                    <li class="list-group-item">Owner name: <%= item.owner_name %></li>
                    <li class="list-group-item">Card type: <%= item.cctype %></li>
                    <li class="list-group-item">Address: <%= item.ccaddress %></li>
                    <li class="list-group-item">Expire date: <%= item.exp_date %></li>
                </ul>
            </div>
        </div>
        <% }); %>
        <div class="pull-right">
            <form class="" action="/new_credit_card" method="GET">
                <input type="text" class="form-control hidden" name="cid" value="<%= cid %>">
                <button class="btn btn-default btn-block btn-sm" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>

<!--
    Shipping Addresses Panel
-->
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Shipping Addresses</h3>
    </div>
    <div class="panel-body">
        <!-- Shipping Addresses Table -->
        <% shippingAddresses.forEach(function(item) { %>
        <div class="list-group">
            <div class="list-group-item">
                <h4 class="list-group-item-heading">Name: <%= item.sa_name %></h4>
                <ul class="list-group">
                    <li class="list-group-item">Recepient name: <%= item.recepient_name %></li>
                    <li class="list-group-item">Street: <%= item.street %></li>
                    <li class="list-group-item">Street number: <%= item.snumber %></li>
                    <li class="list-group-item">City: <%= item.city %></li>
                    <li class="list-group-item">Zipcode: <%= item.zip %></li>
                    <li class="list-group-item">State: <%= item.state %></li>
                    <li class="list-group-item">Country: <%= item.country %></li>
                </ul>
            </div>
        </div>
        <% }); %>
        <div class="pull-right">
            <form class="" action="/new_shipping_address" method="GET">
                <input type="text" class="form-control hidden" name="cid" value="<%= cid %>">
                <button class="btn btn-default btn-block btn-sm" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>
